




<!DOCTYPE html>
html(lang="en")
  head
    title Sentinel
    link(href="/css/site.css" type="text/css" rel="stylesheet")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet")
   
  body
    div(class="container-fluid fullscreen" style='background-image: url("/img/background_1.jpg"); background-size: cover')
      div(class="row h-100 justify-content-center align-items-center")
        form(id="loginForm" action="/users/login" method="POST")
          div(class="col-12")
            h1(class="text-center" style="font-family: 'Source Sans Pro', sans-serif; font-weight: 700 !important; font-size: 3.5rem; color: #fff") Sentinel
          div(class="p-4 rounded")
            div(class="form-group row d-flex" style="color: #fff")
              label(for="username" class="col-3 col-form-label") Username
              div(class="col-9" style="color: #fff")
                input(type="text" class="form-control" id="username" name="username")

            div(class="form-group row d-flex" style="color: #fff")
              label(for="password" class="col-3 col-form-label") Password
              div(class="col-9")
                input(type="password" class="form-control" id="password" name="password")

            div(clas="form-group row")
              div(class="offset-sm-9 offset-sm-3 no-gutters")
                button( class="btn btn-primary login-button" type="submit" value="Login") Submit
