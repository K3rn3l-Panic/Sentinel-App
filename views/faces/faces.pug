extends ../layouts/main

block content
  h1 Listing, adding and removing faces from database

   form(method='POST' action='/faces/add' enctype='multipart/form-data')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='First and Last Name' name='name')
          div.form-group
            label(for='image') Image:
            input#image.form-control(type='file', placeholder='Upload Image' name='image')          
          button.btn.btn-primary(type='submit') Add face